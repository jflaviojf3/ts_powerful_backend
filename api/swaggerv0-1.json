{
    "openapi": "3.0.0",
    "info":     {
        "title": "Sample Pet Store App",
        "summary": "A pet store manager.",
        "description": "This is a sample server for a pet store.",
        "termsOfService": "http://localhost:3000/terms/",
        "contact": {
          "name": "API Support",
          "url": "https://www.example.com/support",
          "email": "support@example.com"
        },
        "license": {
          "name": "Apache 2.0",
          "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.1"
      },
    "servers": [{
        "url": "http://localhost:3000/v1",
        "description": "Api Ambiente Teste" 
    }],
    "paths" : {
        "/usuario":{
            "post":{
                "summary": "Usuarios do Sistema",
                "description": "Rota para cadastrar todos os usuários do sistema",
                "tags": ["Usuarios"],
                "security": [{"bearerAuth": []}],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#components/schemas/Usuario"
                            },
                            "examples": {
                                "usuario":{
                                    "value": {
                                        "nome": "Jesse Lima",
                                        "email": "jlima@pscs.com.br",
                                        "idcargo": 1
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "401": {
                        "description": "Não Autorizado"
                    },
                    "400": {
                        "description": "Usuario Não Existe"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }

            }
        },
        "/usuario/{id}":{
            "get": {
                "description": "Buscar usuario pelo id",
                "summary": "Buscar um unico usuário pelo Id",
                "tags": ["Usuarios"],
                "parameters": [{
                    "name": "id",
                    "in": "query",
                    "description": "Id do usuario buscado",
                    "required": true
                }],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#components/schemas/Usuario"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Usuario": {
                "type": "object",
                "properties":{
                    "id": {
                        "type": "number"
                    },
                    "nome": {
                        "type": "string"
                    }, 
                    "email": {
                        "type": "string"
                    },
                    "idcargo": {
                        "type": "number"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
              }
        }
    }

}